{# purpose of this template: inclusion template for display of related images #}
{% trans_default_domain 'image' %}
{% set hasAdminPermission = permissionHelper.hasComponentPermission('image', constant('ACCESS_EDIT')) %}
<h5>
    {{ item|munewsmodule_formattedTitle }}
</h5>
{% if item.theFile is not empty and item.theFileMeta.isImage %}
    <p>
        <img src="{{ item.theFile.getPathname()|munewsmodule_relativePath|imagine_filter('zkroot', relationThumbRuntimeOptions) }}" alt="{{ item|munewsmodule_formattedTitle|e('html_attr') }}" width="{{ relationThumbRuntimeOptions.thumbnail.size[0] }}" height="{{ relationThumbRuntimeOptions.thumbnail.size[1] }}" class="rounded" />
    </p>
{% endif %}
